<?xml version="1.0" encoding="utf-8"?>
<phpunit
        bootstrap="./tests/bootstrap.php"
        colors="true"
        columns="max"
        verbose="true"
        stoponfailure ="true"
>
    <testsuite name="TypedArray">
        <directory>./tests</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
</phpunit>
